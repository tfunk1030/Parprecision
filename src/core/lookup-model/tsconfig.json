{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "*": ["*", "src/*"]
    },
    "types": ["jest", "node"],
    "moduleResolution": "node"
  },
  "include": [
    "./**/*.ts",
    "../**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}